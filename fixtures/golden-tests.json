{
  "$schema": "./golden-tests.schema.json",
  "version": "1.0",
  "mcp_name": "Singapore Law MCP",
  "description": "Golden contract tests for the Singapore Law MCP covering PDPA, Cybersecurity Act, Computer Misuse Act, Electronic Transactions Act, Companies Act, and Spam Control Act",
  "tests": [
    {
      "id": "sg-001",
      "category": "article_retrieval",
      "description": "Retrieve Section 2 of the Personal Data Protection Act 2012 -- interpretation/definitions including personal data and organisation",
      "tool": "get_provision",
      "input": {
        "document_id": "Personal Data Protection Act 2012",
        "section": "2"
      },
      "assertions": {
        "result_not_empty": true,
        "text_contains": ["personal data", "organisation"],
        "text_not_empty": true
      }
    },
    {
      "id": "sg-002",
      "category": "article_retrieval",
      "description": "Retrieve Section 3 of the Cybersecurity Act 2018 -- interpretation and definitions for critical information infrastructure",
      "tool": "get_provision",
      "input": {
        "document_id": "Cybersecurity Act 2018",
        "section": "3"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["cybersecurity", "critical information infrastructure", "computer"],
        "text_not_empty": true
      }
    },
    {
      "id": "sg-003",
      "category": "article_retrieval",
      "description": "Retrieve Section 1 of the Companies Act 1967 -- short title and commencement",
      "tool": "get_provision",
      "input": {
        "document_id": "Companies Act",
        "section": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["Companies Act"],
        "text_not_empty": true
      }
    },
    {
      "id": "sg-004",
      "category": "search",
      "description": "Full-text search for 'personal data' returns PDPA-related provisions",
      "tool": "search_legislation",
      "input": {
        "query": "personal data"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["Personal Data Protection Act", "personal data", "data protection"]
      }
    },
    {
      "id": "sg-005",
      "category": "search",
      "description": "Full-text search for 'cybersecurity' returns Cybersecurity Act provisions",
      "tool": "search_legislation",
      "input": {
        "query": "cybersecurity"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["Cybersecurity Act", "cybersecurity", "critical information infrastructure"]
      }
    },
    {
      "id": "sg-006",
      "category": "search",
      "description": "Full-text search for 'computer misuse' returns Computer Misuse Act provisions",
      "tool": "search_legislation",
      "input": {
        "query": "computer misuse"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["Computer Misuse Act", "computer misuse"]
      }
    },
    {
      "id": "sg-007",
      "category": "citation_roundtrip",
      "description": "Citation for PDPA Section 26 (data breach notification) includes sso.agc.gov.sg URL pattern",
      "tool": "get_provision",
      "input": {
        "document_id": "Personal Data Protection Act 2012",
        "section": "26"
      },
      "assertions": {
        "result_not_empty": true,
        "citation_url_pattern": "sso\\.agc\\.gov\\.sg",
        "text_not_empty": true
      }
    },
    {
      "id": "sg-008",
      "category": "citation_roundtrip",
      "description": "Citation for Electronic Transactions Act Section 2 includes official identifier",
      "tool": "get_provision",
      "input": {
        "document_id": "Electronic Transactions Act",
        "section": "2"
      },
      "assertions": {
        "result_not_empty": true,
        "text_not_empty": true
      }
    },
    {
      "id": "sg-009",
      "category": "eu_cross_reference",
      "description": "PDPA EU basis query returns gracefully (EU references may not be populated)",
      "tool": "get_eu_basis",
      "input": {
        "document_id": "Personal Data Protection Act 2012"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "sg-010",
      "category": "eu_cross_reference",
      "description": "Cybersecurity Act EU basis query returns gracefully (EU references may not be populated)",
      "tool": "get_eu_basis",
      "input": {
        "document_id": "Cybersecurity Act 2018"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "sg-011",
      "category": "negative_test",
      "description": "Non-existent Singapore Act returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "document_id": "Fictional Quantum Computing Regulation Act 2099",
        "section": "1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "sg-012",
      "category": "negative_test",
      "description": "Malformed section number returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "document_id": "Personal Data Protection Act 2012",
        "section": "999ZZZ-INVALID"
      },
      "assertions": {
        "handles_gracefully": true
      }
    }
  ]
}
